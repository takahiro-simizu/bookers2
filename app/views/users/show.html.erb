<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "unnamed.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fas-fa-user-cog" %>
      </div>
      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @user, url: books_path, local: true do |f| %>
      <div class="field">
        <%= f.label :Title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :Opinion %><br />
        <%= f.text_area :opinion, autofocus: true %>
      </div>
      <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>